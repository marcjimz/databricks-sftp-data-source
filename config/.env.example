# Azure Configuration
# Copy this file to .env and update with your values

# Azure Resource Configuration
RESOURCE_GROUP=rg-databricks-sftp-demo
LOCATION=eastus

# Storage Account Names (must be globally unique, 3-24 lowercase letters/numbers)
SOURCE_STORAGE=sftpsourcestorage001
TARGET_STORAGE=sftptargetstorage001

# Container Names
SOURCE_CONTAINER=source-data
TARGET_CONTAINER=target-data

# SFTP User Configuration
SFTP_USER=sftpuser

# SSH Key Path (local machine)
SSH_KEY_PATH=$HOME/.ssh/sftp_key

# Databricks Secret Scope
SECRET_SCOPE=sftp-credentials
